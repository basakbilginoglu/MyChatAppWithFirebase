<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.dogancan.firebaseexample.MainMenuActivity">

    <Button
        android:id="@+id/btnSignInChat"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Sohbete Gir" />

    <Button
        android:id="@+id/btnUpdateUserInfo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Kullanıcı Güncelle" />

    <Button
        android:id="@+id/btnDeleteUser"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Kullanıcı Sil" />
</LinearLayout>
