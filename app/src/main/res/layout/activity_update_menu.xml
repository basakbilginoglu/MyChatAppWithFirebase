<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="firebaseexample.basak.example.com.firebaseexample.UpdateMenuActivity">

    <Button
        android:id="@+id/btnUpdateUserEmail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Email Güncelle" />

    <Button
        android:id="@+id/btnUpdateUserPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Şifre Güncelle" />

</LinearLayout>
